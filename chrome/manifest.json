{
  "manifest_version": 3,
  "name": "Web Page Analyzer",
  "version": "1.0.0",
  "description": "Analyze web pages from the current browser tab",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "notifications"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Current Page"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}