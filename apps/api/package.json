{
  "name": "@workscript/api",
  "version": "2.0.0",
  "description": "Workscript API server with modular plugin system",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@workscript/engine": "workspace:*",
    "croner": "^9.0.0",
    "drizzle-orm": "^0.37.0",
    "hono": "^4.7.9",
    "mysql2": "^3.11.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.27.1"
  },
  "keywords": [
    "workflow",
    "api",
    "plugin-system",
    "hono",
    "bun"
  ],
  "author": "Workscript",
  "license": "MIT"
}
