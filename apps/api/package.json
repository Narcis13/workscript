{
  "name": "@workscript/api",
  "version": "2.0.0",
  "description": "Workscript API server with modular plugin system",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^4.7.9"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "keywords": [
    "workflow",
    "api",
    "plugin-system",
    "hono",
    "bun"
  ],
  "author": "Workscript",
  "license": "MIT"
}
