{
  "name": "workscript",
  "version": "0.3.1",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "workspaces": [
    "./server",
    "./client",
    "./shared",
    "./packages/*",
    "./apps/*"
  ],
  "scripts": {
    "dev:client": "cd client && bun run dev",
    "dev:server": "cd server && bun run dev",
    "dev:shared": "cd shared && bun run dev",
    "dev": "concurrently --names \"SHARED,SERVER,CLIENT\" --prefix-colors \"cyan,yellow,green\" \"bun run dev:shared\" \"bun run dev:server\" \"bun run dev:client\"",
    "build:client": "cd client && bun run build",
    "build:shared": "cd shared && bun run build",
    "build:server": "cd server && bun run build",
    "build": "bun run build:shared && bun run build:server && bun run build:client",
    "postinstall": "bun run build:shared && bun run build:server",
    "test": "bun run test:shared && bun run test:server",
    "test:shared": "cd shared && bun test",
    "test:server": "cd server && bun test",
    "test:client": "cd client && bun test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo"
  ],
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "bun-types": "latest",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
