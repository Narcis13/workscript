{
  "name": "workscript",
  "version": "0.4.0",
  "description": "A modular workflow orchestration system with plugin architecture",
  "author": "Narcis Brindusescu",
  "license": "MIT",
  "homepage": "https://github.com/narcisbrindusescu/workscript",
  "workspaces": [
    "./server",
    "./packages/*",
    "./apps/*"
  ],
  "scripts": {
    "dev:nodes": "cd packages/nodes && bun run dev",
    "dev:engine": "cd packages/engine && bun run dev",
    "dev:api": "cd apps/api && bun run dev",
    "dev:frontend": "cd apps/frontend && bun run dev",
    "dev": "concurrently --names \"NODES,ENGINE,API,FRONTEND\" --prefix-colors \"magenta,cyan,yellow,green\" \"bun run dev:nodes\" \"bun run dev:engine\" \"bun run dev:api\" \"bun run dev:frontend\"",
    "build:nodes": "cd packages/nodes && bun run build",
    "build:engine": "cd packages/engine && bun run build",
    "build:api": "cd apps/api && bun run build",
    "build:frontend": "cd apps/frontend && bun run build",
    "build": "bun run build:engine && bun run build:nodes && bun run build:api && bun run build:frontend",
    "postinstall": "bun run build:engine",
    "test": "bun run test:engine && bun run test:nodes && bun run test:api",
    "test:nodes": "cd packages/nodes && bun test",
    "test:engine": "cd packages/engine && bun test",
    "test:api": "cd apps/api && bun test",
    "test:frontend": "cd apps/frontend && bun test",
    "clean": "rm -rf packages/*/dist apps/*/dist node_modules/*/node_modules",
    "typecheck": "tsc --noEmit -p packages/engine && tsc --noEmit -p packages/nodes && tsc --noEmit -p apps/api && tsc --noEmit -p apps/frontend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "dev:legacy": "cd server && bun run dev",
    "dev:server": "cd server && bun run dev"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo"
  ],
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "bun-types": "latest",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
