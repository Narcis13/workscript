{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "version", "workflow"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_]+$",
      "minLength": 1,
      "description": "Unique identifier for the workflow"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable name for the workflow"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the workflow"
    },
    "initialState": {
      "type": "object",
      "description": "Initial state values for the workflow execution"
    },
    "workflow": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "type": "object",
          "description": "Node configuration object"
        }
      },
      "additionalProperties": false,
      "description": "Workflow node definitions"
    }
  },
  "additionalProperties": false
}